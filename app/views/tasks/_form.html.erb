<%= form_with model: task do |form| %>

  <div>
    <p>
      <%= form.label :desc %><br>
      <%= form.text_field :desc %><br>
    </p>
    <p>
      <%= form.label "Complete?" %>
      <%= form.check_box :is_complete %>
    </p>
    <% task.errors.full_messages_for(:desc).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
