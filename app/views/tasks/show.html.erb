<p>
      <i>Task <%= @task.id %></i>
</p>

<h1>
      <%= @task.desc %>
</h1>

<p>
      <i>Last edited: <%= @task.updated_at %></i>
</p>

<ul>
  <li><%= link_to "Edit", edit_task_path(@task) %></li>
  <li><%= link_to "Delete", task_path(@task), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                    } %></li>
</ul>